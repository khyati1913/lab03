#include<stdio.h>
int main() {
    int a, b, c;
    printf("Enter three sides of the triangle (integers): ");
    scanf("%d %d %d", &a, &b, &c);
    if (a <= 0 || b <= 0 || c <= 0) {
        printf("Sides must be positive numbers.\n");
        return 0;
    }
    if (a + b > c && a + c > b && b + c > a) {
        printf("Triangle is valid.\n");
        if (a == b && b == c) {
            printf("Type: Equilateral triangle.\n");
        }
        else if (a == b || a == c || b == c) {
            printf("Type: Isosceles triangle.\n");
        }
        else {
            printf("Type: Scalene triangle.\n");
        }
        int x = a, y = b, z = c;
        if (a >= b && a >= c) {
            z = a; x = b; y = c;
        } else if (b >= a && b >= c) {
            z = b; x = a; y = c;
        }
       if (x * x + y * y == z * z) {
            printf("Also, it is a right-angled triangle.\n");
        }

    } else {
        printf("Triangle is not valid.\n");
    }

    return 0;
}
